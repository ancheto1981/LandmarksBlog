@{
    ViewBag.Title = "Landmarks";
}

<div class="jumbotron">
    <h1>Landmarks of Bulgaria</h1>
    <p class="lead">This is a blog about Landmarks of Bulgaria.</p>
</div>

@{
    ViewBag.Title = "Home";
}

@model List<LandmarksBlog.Models.Post>

<section class="row">
    @foreach (var post in Model)
    {
        <article class="post col-md-6">
            <h2 class="title">@post.Title</h2>
            <div class="about">
                Публикувано на <i>@post.Date</i>

                @if (post.Author != null)
                {
                    @:от <i>@post.Author.FullName (@post.Author.UserName)</i>
                }
            </div>
            <div class="body">@Html.Raw(post.Body)</div>
        </article>
    }
</section>
